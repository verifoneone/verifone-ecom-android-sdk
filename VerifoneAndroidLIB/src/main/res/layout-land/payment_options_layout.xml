<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_options_container"
        android:background="@drawable/payment_options_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".45"
        app:layout_constraintWidth_percent=".7"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <ScrollView
            android:fadingEdge="vertical"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/payment_options_title"
                android:text="@string/payment_options_title"
                android:layout_marginTop="18dp"
                android:layout_marginStart="14dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/opt_text_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp"
                android:layout_width="@dimen/close_btn_size"
                android:layout_height="@dimen/close_btn_size"
                android:layout_marginEnd="4dp"
                android:padding="9dp"
                android:backgroundTint="@color/light_grey"
                android:background="@drawable/close_button_shape"
                android:tint="@android:color/white"
                android:src="@drawable/ic_close_button"
                />

            <View
                app:layout_constraintTop_toBottomOf="@id/close_btn"
                android:layout_marginTop="4dp"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container1"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/payment_options_title"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text1"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text1"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/paymentProductTitleCard"
                    android:textColor="@color/opt_text_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im1"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container2"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image2"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text2"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image2"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im2"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container3"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text3"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text3"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image3"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im3"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container4"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text4"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text4"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text4"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image4"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im4"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container5"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text5"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text5"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text5"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image5"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im5"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container6"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text6"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text6"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text6"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image6"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im6"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pay_option_container7"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/pay_option_container6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pay_option_image7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pay_option_text7"
                    app:layout_constraintBottom_toBottomOf="@id/pay_option_text7"
                    app:layout_constraintWidth_percent=".14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/option_arrow_im7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/option_arrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="@dimen/option_arrow_size"
                    android:layout_height="@dimen/option_arrow_size"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/pay_option_text7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/pay_options_padding"
                    android:paddingBottom="@dimen/pay_options_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pay_option_image7"
                    app:layout_constraintEnd_toStartOf="@id/option_arrow_im7"
                    android:textColor="@color/opt_text_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>